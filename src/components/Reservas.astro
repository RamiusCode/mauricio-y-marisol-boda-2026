---
// NumeroPases.astro
// Este componente muestra el n√∫mero de pases asignados a cada invitado
// Se puede configurar din√°micamente seg√∫n el invitado

interface Props {
    numeroPases: number; // 1, 2, 3, etc.
    nombreInvitado?: string; // Opcional: "Juan P√©rez", "Familia Garc√≠a", etc.
}

const { numeroPases = 1, nombreInvitado = "" } = Astro.props;
---

<section class="relative w-full py-4 px-6 overflow-hidden">
    <!-- Part√≠culas flotantes de fondo -->
    <div class="absolute inset-0 pointer-events-none overflow-hidden">
        <div
            class="particula-dorada"
            style="left: 10%; top: 20%; animation-delay: 0s;"
        >
        </div>
        <div
            class="particula-dorada"
            style="left: 85%; top: 30%; animation-delay: 1.5s;"
        >
        </div>
        <div
            class="particula-dorada"
            style="left: 15%; top: 70%; animation-delay: 3s;"
        >
        </div>
        <div
            class="particula-dorada"
            style="left: 90%; top: 65%; animation-delay: 2s;"
        >
        </div>
    </div>

    <div
        class="max-w-sm lg:max-w-3xl mx-auto relative z-10"
        id="contenedor-pases"
    >
        <!-- MARCO PRINCIPAL CON EFECTO GLASSMORPHISM -->
        <div
            class="backdrop-blur-sm rounded-3xl border-2 border-[#0F3D2E]/25 p-8 shadow-sm relative overflow-hidden"
        >
            <!-- Brillo sutil animado en la esquina -->
            <div
                class="absolute -top-20 -right-20 w-40 h-40 bg-gradient-to-br from-[#0F3D2E]/10 to-transparent rounded-full blur-3xl animate-pulse-slow"
            >
            </div>
            <div
                class="absolute -bottom-20 -left-20 w-40 h-40 bg-gradient-to-tr from-[#0F3D2E]/8 to-transparent rounded-full blur-3xl animate-pulse-slow"
                style="animation-delay: 1s;"
            >
            </div>

            <!-- CONTENIDO -->
            <div class="text-center relative" id="tarjeta-pases">
                <!-- Icono de ticket/pase -->
                <div class="flex justify-center mb-6">
                    <div class="w-16 h-16 relative pase-icon-container">
                        <div
                            class="absolute inset-0 bg-gradient-to-br from-[#9C7A2E]/20 to-[#9C7A2E]/5 rounded-full blur-xl animate-pulse-slow"
                        >
                        </div>
                        <img
                            src="/iconos/reserva.png"
                            alt="Icono de reserva"
                            class="w-full h-full object-contain relative z-10 transform transition-transform duration-300 hover:scale-110 verde-filter"
                        />
                    </div>
                </div>

                <!-- T√≠tulo principal -->
                <h3
                    class="text-[#9C7A2E] tracking-[0.3em] uppercase text-lg md:text-2xl mb-3 relative inline-block"
                >
                    Pases Asignados
                </h3>

                <!-- L√≠nea decorativa -->
                <div class="flex items-center justify-center gap-2 mb-2">
                    <div
                        class="w-12 h-px bg-gradient-to-r from-transparent to-[#0F3D2E]/30"
                    >
                    </div>
                    <div class="w-2 h-2 rounded-full bg-[#0F3D2E]/40"></div>
                    <div
                        class="w-12 h-px bg-gradient-to-l from-transparent to-[#0F3D2E]/30"
                    >
                    </div>
                </div>

                <!-- Nombre del invitado (si se proporciona) -->
                {
                    nombreInvitado && (
                        <p class="font-charm text-[#0F3D2E] text-xl md:text-2xl mb-6">
                            {nombreInvitado}
                        </p>
                    )
                }

                <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                <!-- CARD DEL N√öMERO DE PASES - DISE√ëO MEJORADO Y DESTACADO -->
                <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
                <div class="relative mb-6" id="card-numero-pases">
                    <!-- Card principal con glassmorphism y sombras elegantes -->
                    <div>
                        <!-- CONTENIDO DEL CARD -->
                        <div class="relative z-10">
                            <!-- N√∫mero grande y destacado -->
                            <div class="mb-3">
                                <p
                                    class="text-[#9C7A2E] text-5xl md:text-5xl font-bold leading-none numero-pases"
                                    style="text-shadow: 0 4px 12px rgba(156, 122, 46, 0.2);"
                                >
                                    {numeroPases}
                                </p>
                            </div>

                            <!-- Texto descriptivo debajo del n√∫mero -->
                            <div class="space-y-1">
                                <p
                                    class="text-[#9C7A2E] tracking-[0.25em] uppercase text-base md:text-xl font-semibold"
                                >
                                    {numeroPases === 1 ? "Pase" : "Pases"}
                                </p>
                                <div
                                    class="flex items-center justify-center gap-2 mt-2"
                                >
                                    <div class="w-8 h-px bg-[#9C7A2E]/30"></div>
                                    <div
                                        class="w-1.5 h-1.5 rounded-full bg-[#9C7A2E]/50"
                                    >
                                    </div>
                                    <div class="w-8 h-px bg-[#9C7A2E]/30"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sombra proyectada suave -->
                    <div
                        class="absolute -bottom-2 left-1/2 -translate-x-1/2 w-[90%] h-4 bg-[#9C7A2E]/10 rounded-full blur-xl"
                    >
                    </div>
                </div>

                <!-- Texto descriptivo -->
                <p
                    class="font-charm text-[#0F3D2E] text-lg md:text-2xl lg:text-3xl leading-relaxed mb-6"
                >
                    {
                        numeroPases === 1
                            ? "Tu asistencia es invaluable para nosotros"
                            : `Esperamos contar con la presencia de ${numeroPases === 2 ? "ambos" : `los ${numeroPases}`}`
                    }
                </p>

                <!-- Iconos decorativos de personas -->
                <div class="flex justify-center gap-3 mt-6">
                    {
                        Array.from({ length: numeroPases }).map((_, index) => (
                            <div
                                class="w-9 h-9 rounded-full bg-gradient-to-br from-[#0F3D2E]/15 to-[#9C7A2E]/10 flex items-center justify-center person-icon border border-[#9C7A2E]/20"
                                style={`animation-delay: ${index * 0.2}s;`}
                            >
                                <svg
                                    class="w-5 h-5 text-[#9C7A2E]"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                                </svg>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <!-- üå∏ FLORES Y HOJAS DECORATIVAS - ENCIMA DEL CARD               -->
    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->

    <!-- LADO IZQUIERDO -->
    <img
        src="/imagenes/hojadorada.png"
        alt="hoja dorada"
        class="absolute left-0 top-8 md:top-24 w-18 h-18 md:w-28 md:h-28 opacity-0 pointer-events-none z-40"
        id="hoja-pases-left"
    />

    <img
        src="/imagenes/florlateral.png"
        alt="flor"
        class="absolute left-0 top-12 md:top-24 w-18 h-18 md:w-28 md:h-28 opacity-0 pointer-events-none z-50"
        id="flor-pases-left"
    />

    <!-- LADO DERECHO -->
    <img
        src="/imagenes/hojadorada.png"
        alt="hoja dorada"
        class="absolute right-0 top-8 md:top-24 w-18 h-18 md:w-28 md:h-28 opacity-0 pointer-events-none z-40 scale-x-[-1]"
        id="hoja-pases-right"
    />

    <img
        src="/imagenes/florlateral.png"
        alt="flor"
        class="absolute right-0 top-12 md:top-24 w-18 h-18 md:w-28 md:h-28 opacity-0 pointer-events-none z-50 scale-x-[-1]"
        id="flor-pases-right"
    />
</section>

<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé® ESTILOS PERSONALIZADOS                                   -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<style>
    /* Part√≠culas flotantes doradas */
    .particula-dorada {
        position: absolute;
        width: 4px;
        height: 4px;
        background: radial-gradient(circle, #9c7a2e 0%, transparent 70%);
        border-radius: 50%;
        animation: flotar 6s ease-in-out infinite;
        opacity: 0.4;
    }

    @keyframes flotar {
        0%,
        100% {
            transform: translateY(0) translateX(0);
            opacity: 0.2;
        }
        50% {
            transform: translateY(-30px) translateX(15px);
            opacity: 0.6;
        }
    }

    /* Animaci√≥n de pulso lento */
    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.4;
            transform: scale(1);
        }
        50% {
            opacity: 0.6;
            transform: scale(1.05);
        }
    }

    .animate-pulse-slow {
        animation: pulse-slow 4s ease-in-out infinite;
    }

    /* Animaci√≥n suave del icono de pase */
    .pase-icon-container:hover svg {
        animation: bounce-gentle 0.6s ease;
    }

    @keyframes bounce-gentle {
        0%,
        100% {
            transform: translateY(0) scale(1);
        }
        50% {
            transform: translateY(-8px) scale(1.05);
        }
    }

    /* Animaci√≥n de brillo */
    @keyframes shine {
        0% {
            transform: translateX(-100%) translateY(-100%) rotate(30deg);
            opacity: 0;
        }
        50% {
            opacity: 0.3;
        }
        100% {
            transform: translateX(100%) translateY(100%) rotate(30deg);
            opacity: 0;
        }
    }

    .animate-shine {
        animation: shine 3s ease-in-out infinite;
    }

    /* Animaci√≥n de los iconos de personas */
    .person-icon {
        animation: pop-in 0.5s ease-out forwards;
        opacity: 0;
        transform: scale(0);
    }

    @keyframes pop-in {
        0% {
            opacity: 0;
            transform: scale(0);
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* Animaci√≥n especial para el n√∫mero de pases */
    .numero-pases {
        animation: numero-appear 1.2s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
        transform-origin: center;
    }

    @keyframes numero-appear {
        0% {
            transform: scale(0) rotate(-10deg);
            opacity: 0;
        }
        60% {
            transform: scale(1.1) rotate(5deg);
        }
        100% {
            transform: scale(1) rotate(0deg);
            opacity: 1;
        }
    }
</style>

<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<!-- üé¨ ANIMACIONES CON GSAP                                     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const initPases = () => {
        console.log("üé´ Iniciando secci√≥n de pases...");

        // ‚ïê‚ïê‚ïê ESTADO INICIAL ‚ïê‚ïê‚ïê
        gsap.set("#contenedor-pases", {
            opacity: 0,
            y: 50,
            scale: 0.95,
        });

        gsap.set("#card-numero-pases", {
            opacity: 0,
            scale: 0.9,
            y: 20,
        });

        // Flores laterales - Estado inicial
        gsap.set("#flor-pases-left", {
            opacity: 0,
            x: -40,
            rotation: -8,
            scale: 0.9,
        });

        gsap.set("#flor-pases-right", {
            opacity: 0,
            x: 40,
            rotation: 8,
            scaleX: -0.9,
            scaleY: 0.9,
        });

        // Hojas doradas - Estado inicial
        gsap.set("#hoja-pases-left", {
            opacity: 0,
            scale: 0,
            rotation: -6,
            transformOrigin: "bottom center",
        });

        gsap.set("#hoja-pases-right", {
            opacity: 0,
            scaleX: 0,
            scaleY: 0,
            rotation: 6,
            transformOrigin: "bottom center",
        });

        gsap.set("#tarjeta-pases", { opacity: 0, y: 20 });

        // ‚ïê‚ïê‚ïê ANIMACI√ìN PRINCIPAL ‚ïê‚ïê‚ïê
        ScrollTrigger.create({
            trigger: "#contenedor-pases",
            start: "top 75%",
            end: "top 20%",

            onEnter: () => {
                const tl = gsap.timeline();

                // Card aparece
                tl.to(
                    "#contenedor-pases",
                    {
                        opacity: 1,
                        y: 0,
                        scale: 1,
                        duration: 1.6,
                        ease: "power3.out",
                    },
                    0,
                )

                    // Contenido del card principal
                    .to(
                        "#tarjeta-pases",
                        {
                            opacity: 1,
                            y: 0,
                            duration: 1,
                            ease: "power2.out",
                        },
                        0.4,
                    )

                    // Card del n√∫mero con efecto especial
                    .to(
                        "#card-numero-pases",
                        {
                            opacity: 1,
                            scale: 1,
                            y: 0,
                            duration: 1.4,
                            ease: "back.out(1.4)",
                        },
                        0.8,
                    )

                    // üå∏ FLORES LATERALES - Entrada suave
                    .to(
                        "#flor-pases-left",
                        {
                            opacity: 0.75,
                            x: 0,
                            rotation: -3,
                            scale: 1,
                            duration: 2.8,
                            ease: "sine.out",
                        },
                        0,
                    )

                    .to(
                        "#flor-pases-right",
                        {
                            opacity: 0.75,
                            x: 0,
                            rotation: 3,
                            scaleX: -1,
                            scaleY: 1,
                            duration: 2.8,
                            ease: "sine.out",
                        },
                        0.05,
                    )

                    // üçÉ HOJAS DORADAS - Crecimiento natural
                    .to(
                        "#hoja-pases-left",
                        {
                            opacity: 0.7,
                            scale: 0.9,
                            rotation: -3,
                            duration: 2.2,
                            ease: "sine.out",
                        },
                        0.1,
                    )

                    .to(
                        "#hoja-pases-right",
                        {
                            opacity: 0.7,
                            scaleX: -0.9,
                            scaleY: 0.9,
                            rotation: 3,
                            duration: 2.2,
                            ease: "sine.out",
                        },
                        0.15,
                    );

                // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
                // üçÉ MOVIMIENTOS NATURALES CONTINUOS
                // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

                // Flor izquierda
                gsap.to("#flor-pases-left", {
                    y: -15,
                    x: -8,
                    rotation: -12,
                    duration: 3,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 3,
                });

                // Flor derecha
                gsap.to("#flor-pases-right", {
                    y: -12,
                    x: 8,
                    rotation: 12,
                    duration: 3.3,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 3.2,
                });

                // Hoja izquierda
                gsap.to("#hoja-pases-left", {
                    y: -18,
                    rotation: -15,
                    duration: 3.5,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 3.3,
                });

                // Hoja derecha
                gsap.to("#hoja-pases-right", {
                    y: -16,
                    rotation: 15,
                    duration: 3.8,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 3.5,
                });

                // Respiraci√≥n
                gsap.to("#hoja-pases-left", {
                    scale: 0.8,
                    duration: 4,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 4,
                });

                gsap.to("#hoja-pases-right", {
                    scaleX: -0.8,
                    scaleY: 0.8,
                    duration: 4.5,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 4.3,
                });

                // Efecto brisa
                gsap.to("#flor-pases-left", {
                    x: -12,
                    duration: 5,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 4.5,
                });

                gsap.to("#flor-pases-right", {
                    x: 12,
                    duration: 5.5,
                    repeat: -1,
                    yoyo: true,
                    ease: "sine.inOut",
                    delay: 4.8,
                });

                // Sutil movimiento del card del n√∫mero
                gsap.to("#card-numero-pases", {
                    y: -5,
