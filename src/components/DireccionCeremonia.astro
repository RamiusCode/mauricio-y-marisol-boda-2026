        </div>
    </div>

    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <!-- üé¨ ANIMACIONES CON GSAP                                     -->
    <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
    <script>
        import { gsap } from "gsap";
        import { ScrollTrigger } from "gsap/ScrollTrigger";

        gsap.registerPlugin(ScrollTrigger);

        const initCeremoniaReligiosa = () => {
            console.log("‚õ™ Iniciando componente Ceremonia Religiosa...");

            // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
            // ‚öôÔ∏è ESTADO INICIAL
            // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

            // Contenido principal
            gsap.set("#ceremonia-content", {
                opacity: 0,
                y: 30,
            });

            // Flores laterales (ENCIMA)
            gsap.set("#hoja-ceremonia-left", {
                opacity: 0,
                x: -20,
                rotation: 0,
                scale: 1,
            });
            gsap.set("#hoja-ceremonia-right", {
                opacity: 0,
                x: 20,
                rotation: 0,
                scaleX: -1,
                scaleY: 1,
            });

            // Hojas doradas (ABAJO)
            gsap.set("#hoja-dorada-left", {
                opacity: 0,
                x: -20,
                rotation: 0,
                scale: 1,
            });
            gsap.set("#hoja-dorada-right", {
                opacity: 0,
                x: 20,
                rotation: 0,
                scaleX: -1,
                scaleY: 1,
            });

            // Mano pointer
            gsap.set("#mano-pointer", {
                opacity: 0,
                scale: 0.8,
            });

            // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
            // üé≠ ANIMACI√ìN AL ENTRAR
            // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

            ScrollTrigger.create({
                trigger: "#wrapper-ceremonia",
                start: "top 80%",
                end: "top 20%",

                onEnter: () => {
                    const tl = gsap.timeline();

                    // 1Ô∏è‚É£ CONTENIDO PRINCIPAL - INMEDIATO (0s)
                    tl.to(
                        "#ceremonia-content",
                        {
                            opacity: 1,
                            y: 0,
                            duration: 1.2,
                            ease: "power3.out",
                        },
                        0,
                    )

                        // 2Ô∏è‚É£ FLORES LATERALES (ENCIMA) - A LOS 0.5 SEGUNDOS
                        .to(
                            "#hoja-ceremonia-left",
                            {
                                opacity: 0.8,
                                x: 0,
                                duration: 1,
                                ease: "power2.out",
                            },
                            0.5,
                        )
                        .to(
                            "#hoja-ceremonia-right",
                            {
                                opacity: 0.8,
                                x: 0,
                                duration: 1,
                                ease: "power2.out",
                            },
                            0.5,
                        )

                        // 3Ô∏è‚É£ HOJAS DORADAS (ABAJO) - 1 SEGUNDO DESPU√âS (a los 1.5s)
                        .to(
                            "#hoja-dorada-left",
                            {
                                opacity: 0.9,
                                x: 0,
                                duration: 1,
                                ease: "power2.out",
                            },
                            1.5,
                        )
                        .to(
                            "#hoja-dorada-right",
                            {
                                opacity: 0.9,
                                x: 0,
                                duration: 1,
                                ease: "power2.out",
                            },
                            1.5,
                        )

                        // 4Ô∏è‚É£ MANO - DESPU√âS DE TODO (a los 2.5s)
                        .to(
                            "#mano-pointer",
                            {
                                opacity: 1,
                                scale: 1,
                                duration: 0.5,
                                ease: "back.out(2)",
                            },
                            0.5,
                        );

                    // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
                    // üçÉ MOVIMIENTOS NATURALES SUAVES (30% menos intensidad)
                    // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

                    // Flor ceremonia izquierda - Movimiento suave
                    gsap.to("#hoja-ceremonia-left", {
                        y: -10, // era -15
                        x: -5, // era -8
                        rotation: -8, // era -12
                        duration: 3.5, // m√°s lento
                        repeat: -1,
                        yoyo: true,
                        ease: "sine.inOut",
                        delay: 2.5,
                    });

                    // Flor ceremonia derecha
                    gsap.to("#hoja-ceremonia-right", {
                        y: -8, // era -12
                        x: 5, // era 8
                        rotation: 8, // era 12
                        duration: 3.8, // m√°s lento
                        repeat: -1,
                        yoyo: true,
                        ease: "sine.inOut",
                        delay: 2.7,
                    });

                    // Hoja dorada izquierda - Balanceo suave
                    gsap.to("#hoja-dorada-left", {
                        y: -12, // era -18
                        rotation: -10, // era -15
                        duration: 4, // m√°s lento
                        repeat: -1,
                        yoyo: true,
                        ease: "sine.inOut",
                        delay: 2.8,
                    });

                    // Hoja dorada derecha
                    gsap.to("#hoja-dorada-right", {
                        y: -11, // era -16
                        rotation: 10, // era 15
                        duration: 4.3, // m√°s lento
                        repeat: -1,
                        yoyo: true,
                        ease: "sine.inOut",
                        delay: 3,
                    });

                    // ‚ïê‚ïê‚ïê RESPIRACI√ìN M√ÅS SUTIL (SCALE) ‚ïê‚ïê‚ïê
                    gsap.to("#hoja-dorada-left", {
                        scale: 0.85, // era 0.8
                        duration: 4.5, // m√°s lento
                        repeat: -1,
                        yoyo: true,
                        ease: "sine.inOut",
                        delay: 3.2,
                    });

                    gsap.to("#hoja-dorada-right", {
                        scaleX: -0.85, // era -0.8
                        scaleY: 0.85, // era 0.8
                        duration: 5, // m√°s lento
                        repeat: -1,
                        yoyo: true,
                        ease: "sine.inOut",
                        delay: 3.5,
                    });

                    // ‚ïê‚ïê‚ïê EFECTO BRISA M√ÅS SUTIL ‚ïê‚ïê‚ïê
                    gsap.to("#hoja-ceremonia-left", {
                        x: -8, // era -12
                        duration: 5.5, // m√°s lento
                        repeat: -1,
                        yoyo: true,
                        ease: "sine.inOut",
                        delay: 3.8,
                    });

                    gsap.to("#hoja-ceremonia-right", {
                        x: 8, // era 12
                        duration: 6, // m√°s lento
                        repeat: -1,
                        yoyo: true,
                        ease: "sine.inOut",
                        delay: 4,
                    });

                    // ‚ïê‚ïê‚ïê ANIMACI√ìN DE PRESIONAR BOT√ìN (loop infinito) ‚ïê‚ïê‚ïê
                    gsap.to("#mano-pointer", {
                        scale: 0.9,
                        duration: 0.6,
                        ease: "power1.inOut",
                        repeat: -1,
                        yoyo: true,
                        delay: 3,
                    });
                },

                // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
                // üîô ANIMACI√ìN AL SALIR (scroll hacia arriba)
                // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

                onLeaveBack: () => {
                    // Detener TODAS las animaciones continuas
                    gsap.killTweensOf("#mano-pointer");
                    gsap.killTweensOf("#hoja-ceremonia-left");
                    gsap.killTweensOf("#hoja-ceremonia-right");
                    gsap.killTweensOf("#hoja-dorada-left");
                    gsap.killTweensOf("#hoja-dorada-right");

                    const tl = gsap.timeline();

                    // Hacer todo invisible al mismo tiempo
                    tl.to(
                        "#ceremonia-content, #hoja-ceremonia-left, #hoja-ceremonia-right, #hoja-dorada-left, #hoja-dorada-right, #mano-pointer",
                        {
                            opacity: 0,
                            duration: 0.5,
                            ease: "power2.in",
                        },
                    )

                        // Mover el contenido hacia abajo
                        .to(
                            "#ceremonia-content",
                            {
                                y: 30,
                                duration: 0.5,
                                ease: "power2.in",
                            },
                            "<",
                        )

                        // Mover flores laterales hacia afuera
                        .to(
                            "#hoja-ceremonia-left",
                            {
                                x: -20,
                                y: 0,
                                duration: 0.5,
                                ease: "power2.in",
                            },
                            "<",
                        )
                        .to(
                            "#hoja-ceremonia-right",
                            {
                                x: 20,
                                y: 0,
                                duration: 0.5,
                                ease: "power2.in",
                            },
                            "<",
                        )

                        // Mover hojas doradas hacia afuera
                        .to(
                            "#hoja-dorada-left",
                            {
                                x: -20,
                                y: 0,
                                duration: 0.5,
                                ease: "power2.in",
                            },
                            "<",
                        )
                        .to(
                            "#hoja-dorada-right",
                            {
                                x: 20,
                                y: 0,
                                duration: 0.5,
                                ease: "power2.in",
                            },
                            "<",
                        )

                        // Escalar la mano
                        .to(
                            "#mano-pointer",
                            {
                                scale: 0.8,
                                duration: 0.5,
                                ease: "power2.in",
                            },
                            "<",
                        )

                        // Resetear rotaciones y scales
                        .set("#hoja-ceremonia-left", {
                            rotation: 0,
                            scale: 1,
                        })
                        .set("#hoja-ceremonia-right", {
                            rotation: 0,
                            scaleX: -1,
                            scaleY: 1,
                        })
                        .set("#hoja-dorada-left", {
                            rotation: 0,
                            scale: 1,
                        })
                        .set("#hoja-dorada-right", {
                            rotation: 0,
                            scaleX: -1,
                            scaleY: 1,
                        });
                },
            });

            console.log(
                "‚õ™‚ú® Ceremonia Religiosa activada - Movimiento suave!",
            );
        };

        document.addEventListener("DOMContentLoaded", initCeremoniaReligiosa);
