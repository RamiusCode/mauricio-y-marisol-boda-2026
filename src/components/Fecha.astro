<!-- üé¨ ANIMACIONES CON GSAP - ANIMACI√ìN DE ENTRADA MEJORADA     -->
<!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("üìÖ Iniciando animaciones de fecha...");

      // ‚öôÔ∏è CONFIGURACI√ìN DE SEPARACI√ìN RESPONSIVE
      const SEPARACION = {
        mobile: 70,
        md: 130,
        lg: 170,
        xl: 190,
      };

      const getSeparacion = () => {
        const width = window.innerWidth;
        if (width >= 1280) return SEPARACION.xl;
        if (width >= 1024) return SEPARACION.lg;
        if (width >= 768) return SEPARACION.md;
        return SEPARACION.mobile;
      };

      let separacionActual = getSeparacion();

      // üéØ ESTADO INICIAL - SUAVE Y ELEGANTE
      gsap.set("#paloma-izq", { opacity: 0, x: -250, y: -20 });
      gsap.set("#paloma-der", { opacity: 0, x: 250, y: -20 });

      // Flores laterales (ENCIMA)
      gsap.set("#hoja-fecha-izq", {
        opacity: 0,
        x: -40,
        y: 20,
        rotation: -15,
        scale: 0.8,
      });
      gsap.set("#hoja-fecha-der", {
        opacity: 0,
        x: 40,
        y: 20,
        rotation: 15,
        scaleX: -0.8,
        scaleY: 0.8,
      });

      // Hojas doradas (ABAJO)
      gsap.set("#hoja-dorada-fecha-izq", {
        opacity: 0,
        x: -50,
        y: 25,
        rotation: -20,
        scale: 0.7,
      });
      gsap.set("#hoja-dorada-fecha-der", {
        opacity: 0,
        x: 50,
        y: 25,
        rotation: 20,
        scaleX: -0.7,
        scaleY: 0.7,
      });

      gsap.set("#texto-invitacion", { opacity: 0, x: -30, y: 15 });
      gsap.set("#anio-evento", { opacity: 0, x: 30, y: 15 });
      gsap.set("#fecha-evento", { opacity: 0, x: -30, y: 15 });
      gsap.set("#hora-evento", { opacity: 0, x: 30, y: 15 });

      // ‚ú® ANIMACI√ìN DE ENTRADA MEJORADA
      ScrollTrigger.create({
        trigger: "#palomas-container",
        start: "top bottom",
        end: "top 20%",

        onEnter: () => {
          separacionActual = getSeparacion();
          const tl = gsap.timeline();

          // 1Ô∏è‚É£ PALOMAS - Vuelo suave y delicado
          tl.to(
            "#paloma-izq, #paloma-der",
            {
              opacity: 1,
              duration: 2,
              ease: "power1.inOut",
            },
            0,
          )
            .to(
              "#paloma-izq",
              {
                x: -separacionActual,
                y: 0,
                duration: 3,
                ease: "power2.inOut",
              },
              0,
            )
            .to(
              "#paloma-der",
              {
                x: separacionActual,
                y: 0,
                duration: 3,
                ease: "power2.inOut",
              },
              0,
            )
            // 2Ô∏è‚É£ TEXTO INVITACI√ìN - Desliza desde la izquierda
            .to(
              "#texto-invitacion",
              {
                opacity: 1,
                x: 0,
                y: 0,
                duration: 1.2,
                ease: "power2.out",
              },
              0.8,
            )
            // 3Ô∏è‚É£ A√ëO - Desliza desde la derecha
            .to(
              "#anio-evento",
              {
                opacity: 1,
                x: 0,
                y: 0,
                duration: 1.2,
                ease: "power2.out",
              },
              1.1,
            )
            // 4Ô∏è‚É£ FECHA - Desliza desde la izquierda
            .to(
              "#fecha-evento",
              {
                opacity: 1,
                x: 0,
                y: 0,
                duration: 1.2,
                ease: "power2.out",
              },
              1.4,
            )
            // 5Ô∏è‚É£ HORA - Desliza desde la derecha
            .to(
              "#hora-evento",
              {
                opacity: 1,
                x: 0,
                y: 0,
                duration: 1.2,
                ease: "power2.out",
              },
              1.7,
            )
            // 6Ô∏è‚É£ FLORES LATERALES - Aparici√≥n suave como p√©talos
            .to(
              "#hoja-fecha-izq",
              {
                opacity: 0.8,
                x: 0,
                y: 0,
                rotation: 0,
                scale: 1,
                duration: 1.8,
                ease: "power1.out",
              },
              2.0,
            )
            .to(
              "#hoja-fecha-der",
              {
                opacity: 0.8,
                x: 0,
                y: 0,
                rotation: 0,
                scaleX: -1,
                scaleY: 1,
                duration: 1.8,
                ease: "power1.out",
              },
              2.1,
            )
            // 7Ô∏è‚É£ HOJAS DORADAS - Entrada suave y elegante
            .to(
              "#hoja-dorada-fecha-izq",
              {
                opacity: 0.9,
                x: 0,
                y: 0,
                rotation: 0,
                scale: 1,
                duration: 2,
                ease: "power1.out",
              },
              2.3,
            )
            .to(
              "#hoja-dorada-fecha-der",
              {
                opacity: 0.9,
                x: 0,
                y: 0,
                rotation: 0,
                scaleX: -1,
                scaleY: 1,
                duration: 2,
                ease: "power1.out",
              },
              2.4,
            );

          // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
          // üçÉ MOVIMIENTOS NATURALES SUAVES
          // ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê

          // Flor lateral izquierda - Movimiento suave
          gsap.to("#hoja-fecha-izq", {
            y: -10,
            x: -5,
            rotation: -8,
            duration: 3.5,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 3.3,
          });

          // Flor lateral derecha
          gsap.to("#hoja-fecha-der", {
            y: -8,
            x: 5,
            rotation: 8,
            duration: 3.8,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 3.5,
          });

          // Hoja dorada izquierda - Balanceo suave
          gsap.to("#hoja-dorada-fecha-izq", {
            y: -12,
            rotation: -10,
            duration: 4,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 3.8,
          });

          // Hoja dorada derecha
          gsap.to("#hoja-dorada-fecha-der", {
            y: -11,
            rotation: 10,
            duration: 4.3,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 4,
          });

          // ‚ïê‚ïê‚ïê RESPIRACI√ìN M√ÅS SUTIL (SCALE) ‚ïê‚ïê‚ïê
          gsap.to("#hoja-dorada-fecha-izq", {
            scale: 0.85,
            duration: 4.5,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 4.2,
          });

          gsap.to("#hoja-dorada-fecha-der", {
            scaleX: -0.85,
            scaleY: 0.85,
            duration: 5,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 4.5,
          });

          // ‚ïê‚ïê‚ïê EFECTO BRISA M√ÅS SUTIL ‚ïê‚ïê‚ïê
          gsap.to("#hoja-fecha-izq", {
            x: -8,
            duration: 5.5,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 4.8,
          });

          gsap.to("#hoja-fecha-der", {
            x: 8,
            duration: 6,
            repeat: -1,
            yoyo: true,
            ease: "sine.inOut",
            delay: 5,
          });
        },

        onLeaveBack: () => {
          // Detener TODAS las animaciones continuas
          gsap.killTweensOf("#hoja-fecha-izq");
          gsap.killTweensOf("#hoja-fecha-der");
          gsap.killTweensOf("#hoja-dorada-fecha-izq");
          gsap.killTweensOf("#hoja-dorada-fecha-der");

          const tl = gsap.timeline();

          tl.to(
            "#paloma-izq, #paloma-der, #hoja-fecha-izq, #hoja-fecha-der, #hoja-dorada-fecha-izq, #hoja-dorada-fecha-der, #texto-invitacion, #anio-evento, #fecha-evento, #hora-evento",
            {
              opacity: 0,
              duration: 0.5,
              ease: "power2.in",
            },
          )
            .to(
              "#paloma-izq",
              { x: -250, y: -20, duration: 0.6, ease: "power2.in" },
              "<",
            )
            .to(
              "#paloma-der",
              { x: 250, y: -20, duration: 0.6, ease: "power2.in" },
              "<",
            )
            .to(
              "#texto-invitacion",
              { x: -30, y: 15, duration: 0.6, ease: "power2.in" },
              "<",
            )
            .to(
              "#anio-evento",
              { x: 30, y: 15, duration: 0.6, ease: "power2.in" },
              "<",
            )
            .to(
              "#fecha-evento",
              { x: -30, y: 15, duration: 0.6, ease: "power2.in" },
              "<",
            )
            .to(
              "#hora-evento",
              { x: 30, y: 15, duration: 0.6, ease: "power2.in" },
              "<",
            )
            // Mover flores laterales hacia afuera suavemente
            .to(
              "#hoja-fecha-izq",
              {
                x: -40,
                y: 20,
                rotation: -15,
                scale: 0.8,
                duration: 0.6,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#hoja-fecha-der",
              {
                x: 40,
                y: 20,
                rotation: 15,
                scaleX: -0.8,
                scaleY: 0.8,
                duration: 0.6,
                ease: "power2.in",
              },
              "<",
            )
            // Mover hojas doradas hacia afuera suavemente
            .to(
              "#hoja-dorada-fecha-izq",
              {
                x: -50,
                y: 25,
                rotation: -20,
                scale: 0.7,
                duration: 0.6,
                ease: "power2.in",
              },
              "<",
            )
            .to(
              "#hoja-dorada-fecha-der",
              {
                x: 50,
                y: 25,
                rotation: 20,
                scaleX: -0.7,
                scaleY: 0.7,
                duration: 0.6,
                ease: "power2.in",
              },
              "<",
            );
        },
      });

      // üì± RESIZE
      let resizeTimeout;
      window.addEventListener("resize", () => {
        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
          const nuevaSeparacion = getSeparacion();
          if (nuevaSeparacion !== separacionActual) {
            separacionActual = nuevaSeparacion;
            gsap.to("#paloma-izq", { x: -separacionActual, duration: 0.3 });
            gsap.to("#paloma-der", { x: separacionActual, duration: 0.3 });
          }
        }, 150);
      });

      console.log("‚ú® Animaciones listas!");
    });
  }
</script>
