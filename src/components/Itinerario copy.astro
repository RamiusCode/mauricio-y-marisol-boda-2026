    }
</style>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const initItinerario = () => {
        // üéØ ESTADO INICIAL - Todo oculto
        gsap.set(".titulo-itinerario", { opacity: 0, y: -30 });
        gsap.set(".linea-central", { opacity: 0, scaleY: 0 });
        gsap.set(".corazon-item", { opacity: 0, scale: 0 });
        gsap.set(".evento-item", { opacity: 0 });
        gsap.set(".imagen-izq", { x: -60 });
        gsap.set(".texto-izq", { x: -60 });
        gsap.set(".imagen-der", { x: 60 });
        gsap.set(".texto-der", { x: 60 });

        // ‚ú® ANIMACI√ìN DEL T√çTULO (solo una vez)
        ScrollTrigger.create({
            trigger: ".titulo-itinerario",
            start: "top 85%",
            once: true,
            onEnter: () => {
                gsap.to(".titulo-itinerario", {
                    opacity: 1,
                    y: 0,
                    duration: 1.2,
                    ease: "power3.out",
                });
            },
        });

        // ‚ú® ANIMACI√ìN DEL ITINERARIO - SE REPITE AL BAJAR/SUBIR
        ScrollTrigger.create({
            trigger: "#eventos-container",
            start: "top 80%",
            end: "top 20%",

            // Al bajar (entrar)
            onEnter: () => {
                const tl = gsap.timeline();

                // TODO AL MISMO TIEMPO (label 0)
                tl.to(
                    ".linea-central",
                    {
                        opacity: 1,
                        scaleY: 1,
                        duration: 1.5,
                        ease: "power2.out",
                        transformOrigin: "top center",
                    },
                    0,
                )

                    .to(
                        ".corazon-item",
                        {
                            opacity: 1,
                            scale: 1,
                            duration: 0.8,
                            ease: "back.out(1.7)",
                        },
                        0,
                    )

                    .to(
                        ".evento-item",
                        {
                            opacity: 1,
                            duration: 1,
                            ease: "power3.out",
                        },
                        0,
                    )

                    .to(
                        ".imagen-izq, .texto-izq",
                        {
                            x: 0,
                            duration: 1,
                            ease: "power3.out",
                        },
                        0,
                    )

                    .to(
                        ".imagen-der, .texto-der",
                        {
                            x: 0,
                            duration: 1,
                            ease: "power3.out",
                        },
                        0,
                    );
            },

            // Al subir (salir)
            onLeaveBack: () => {
                const tl = gsap.timeline();

                // Resetea TODO AL MISMO TIEMPO
                tl.to(
                    ".linea-central, .corazon-item, .evento-item",
                    {
                        opacity: 0,
                        duration: 0.4,
                        ease: "power2.in",
                    },
                    0,
                )

                    .to(
                        ".linea-central",
                        {
                            scaleY: 0,
                            duration: 0.4,
